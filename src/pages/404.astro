---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/common/Navbar.astro";
---

<Layout title="KDMS - Page introuvable" description="La page que vous recherchez n'existe pas ou a été déplacée.">
    <Navbar />

    <div
        class="fixed inset-0 flex flex-col items-center justify-center bg-black text-white"
    >
        <p class="text-8xl md:text-9xl font-black mb-4 text-white/10">404</p>
        <h1 class="text-3xl md:text-5xl font-bold mb-4">
            Page introuvable
        </h1>
        <p class="text-lg md:text-xl text-white/75 mb-8">
            La page que vous recherchez n'existe pas ou a été déplacée.
        </p>
        <a
            href="/"
            class="px-6 py-3 border border-white/30 rounded-lg hover:bg-white/10 transition-colors"
        >
            Retour à l'accueil
        </a>
    </div>
</Layout>
