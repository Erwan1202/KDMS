---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/common/Navbar.astro";
---

<Layout title="KDMS - Page en construction">
    <Navbar />

    <div
        class="fixed inset-0 flex flex-col items-center justify-center bg-black text-white"
    >
        <h1 class="text-4xl md:text-6xl font-bold mb-4">
            Site en construction
        </h1>
        <p class="text-lg md:text-xl text-white/60 mb-8">
            Cette page sera bientôt disponible.
        </p>
        <a
            href="/"
            class="px-6 py-3 border border-white/30 rounded-lg hover:bg-white/10 transition-colors"
        >
            Retour à l'accueil
        </a>
    </div>
</Layout>

<style>
    @import "tailwindcss";
</style>
