---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import logoWhite from "../assets/common/logo-white.png";
import bgImage from "../assets/landing/bg.jpg";
---

<Layout
    title="KDMS - Flight Cases Sur Mesure"
    description="KDMS, fabricant français de flight cases 100% sur mesure."
>
    <style>
        .logo-glow {
            filter: drop-shadow(0 0 20px rgba(255, 255, 255, 0.3))
                drop-shadow(0 0 40px rgba(255, 255, 255, 0.1));
        }
        .map-grayscale {
            filter: grayscale(100%) contrast(1.1);
        }
    </style>
    <main class="min-h-screen relative">
        <Image
            src={bgImage}
            alt=""
            class="fixed inset-0 w-full h-full object-cover scale-125 object-[30%_40%]"
            loading="eager"
        />
        <div class="fixed inset-0 bg-black/40" style="z-index: 5;"></div>

        <div
            class="relative min-h-screen flex flex-col px-6 py-8 text-white"
            style="z-index: 10;"
        >
            <div class="text-center mb-6">
                <Image
                    src={logoWhite}
                    alt="KDMS"
                    class="w-24 md:w-28 mx-auto mb-3 logo-glow"
                    loading="eager"
                />
                <h1 class="text-2xl md:text-4xl font-bold">
                    Le flight case <span class="text-[#6b8239]"
                        >100% custom</span
                    >
                </h1>
                <p class="text-white/90 font-medium text-base mt-1 mb-5">
                    Fabrication française sur mesure
                </p>
                <div class="inline-flex items-center gap-2.5 px-4 py-1.5 rounded-full bg-amber-500/10 border border-amber-500/20 backdrop-blur-md">
                    <span class="relative flex h-2 w-2">
                        <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-amber-400 opacity-75"></span>
                        <span class="relative inline-flex rounded-full h-2 w-2 bg-amber-500"></span>
                    </span>
                    <span class="text-xs sm:text-sm font-semibold tracking-wider text-amber-400 uppercase">Le site complet arrive bientot</span>
                </div>
            </div>

            <div class="flex-1 flex items-center justify-center">
                <div
                    class="w-full max-w-5xl grid grid-cols-1 md:grid-cols-2 gap-6 items-stretch"
                >
                    <div
                        class="bg-black/30 backdrop-blur-xl border border-white/20 rounded-xl p-6 flex flex-col justify-center"
                    >
                        <p
                            class="text-white/60 text-xs uppercase tracking-widest mb-6"
                        >
                            Contactez-nous
                        </p>

                        <a
                            href="tel:+33169127210"
                            class="flex items-center gap-4 mb-5 group"
                        >
                            <div
                                class="w-12 h-12 rounded-full bg-[#5a7030]/40 flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                    class="text-[#8aad4a]"
                                >
                                    <path
                                        d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                                    ></path>
                                </svg>
                            </div>
                            <div>
                                <span
                                    class="text-white/50 text-xs uppercase tracking-wide"
                                    >Téléphone</span
                                >
                                <span
                                    class="text-white text-lg font-semibold block group-hover:text-[#8aad4a] transition-colors"
                                    >+33 1 69 12 72 10</span
                                >
                            </div>
                        </a>

                        <a
                            href="mailto:contact@k-dms.co"
                            class="flex items-center gap-4 mb-5 group"
                        >
                            <div
                                class="w-12 h-12 rounded-full bg-[#5a7030]/40 flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                    class="text-[#8aad4a]"
                                >
                                    <path
                                        d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                                    ></path>
                                    <polyline points="22,6 12,13 2,6"
                                    ></polyline>
                                </svg>
                            </div>
                            <div>
                                <span
                                    class="text-white/50 text-xs uppercase tracking-wide"
                                    >Email</span
                                >
                                <span
                                    class="text-white text-lg font-semibold block group-hover:text-[#8aad4a] transition-colors"
                                    >contact@k-dms.co</span
                                >
                            </div>
                        </a>

                        <div class="flex items-center gap-4">
                            <div
                                class="w-12 h-12 rounded-full bg-[#5a7030]/40 flex items-center justify-center flex-shrink-0"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                    class="text-[#8aad4a]"
                                >
                                    <path
                                        d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                                    ></path>
                                    <circle cx="12" cy="10" r="3"></circle>
                                </svg>
                            </div>
                            <div>
                                <span
                                    class="text-white/50 text-xs uppercase tracking-wide"
                                    >Adresse</span
                                >
                                <span class="text-white text-base block"
                                    >8 Rue Camille Décauville<br />91250 Tigery,
                                    France</span
                                >
                            </div>
                        </div>
                    </div>

                    <div
                        class="bg-black/30 backdrop-blur-xl border border-white/20 rounded-xl p-6 flex flex-col"
                    >
                        <p
                            class="text-white/60 text-xs uppercase tracking-widest mb-4"
                        >
                            Être recontacté
                        </p>

                        <form 
                            id="contact-form"
                            class="space-y-3"
                        >
                            <!-- Honeypot anti-spam -->
                            <input type="text" name="bot-field" class="hidden" tabindex="-1" autocomplete="off" />
                            <div class="grid grid-cols-2 gap-3">
                                <input
                                    type="text"
                                    name="firstname"
                                    placeholder="Prénom"
                                    required
                                    class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:border-[#6b8239] focus:outline-none transition-colors"
                                />
                                <input
                                    type="text"
                                    name="lastname"
                                    placeholder="Nom"
                                    required
                                    class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:border-[#6b8239] focus:outline-none transition-colors"
                                />
                            </div>

                            <input
                                type="email"
                                name="email"
                                placeholder="Email"
                                required
                                class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:border-[#6b8239] focus:outline-none transition-colors"
                            />

                            <input
                                type="tel"
                                name="phone"
                                placeholder="Téléphone"
                                required
                                class="w-full bg-white/10 border border-white/20 rounded-lg px-4 py-3 text-white placeholder-white/60 focus:border-[#6b8239] focus:outline-none transition-colors"
                            />

                            <button
                                type="submit"
                                class="w-full bg-[#5a7030] hover:bg-[#6b8239] text-white font-bold py-3.5 px-6 rounded-lg transition-all duration-300 hover:scale-[1.02] hover:shadow-lg hover:shadow-[#5a7030]/40 active:scale-[0.98]"
                            >
                                Me rappeler
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="w-full max-w-5xl mx-auto mt-6">
                <div
                    class="rounded-xl overflow-hidden border border-white/20 h-40 md:h-48"
                >
                    <iframe
                        title="Localisation KDMS"
                        class="w-full h-full map-grayscale"
                        loading="lazy"
                        src="https://maps.google.com/maps?q=8+Rue+Camille+D%C3%A9cauville,+91250+Tigery&t=&z=14&ie=UTF8&iwloc=&output=embed"
                    ></iframe>
                </div>
            </div>

            <p class="text-white/40 text-sm mt-6 text-center">
                © 2026 KDMS - Tous droits réservés
            </p>
        </div>
    </main>
</Layout>

<script>
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const submitBtn = form?.querySelector('button[type="submit"]') as HTMLButtonElement;
    
    form?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        // Désactiver le bouton pendant l'envoi
        const originalText = submitBtn.textContent;
        submitBtn.disabled = true;
        submitBtn.textContent = 'Envoi en cours...';
        
        try {
            const formData = new FormData(form);
            
            const response = await fetch('/send-email.php', {
                method: 'POST',
                body: formData
            });
            
            const result = await response.json();
            
            if (result.success) {
                // Afficher le message de succès
                form.innerHTML = `
                    <div class="text-center py-8">
                        <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-green-500/20 flex items-center justify-center">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-green-400">
                                <polyline points="20 6 9 17 4 12"></polyline>
                            </svg>
                        </div>
                        <p class="text-white text-lg font-semibold">Message envoyé !</p>
                        <p class="text-white/60 text-sm mt-2">Nous vous recontacterons rapidement.</p>
                    </div>
                `;
            } else {
                throw new Error(result.message || 'Erreur lors de l\'envoi');
            }
        } catch (error) {
            // Afficher l'erreur
            const errorDiv = document.createElement('div');
            errorDiv.className = 'bg-red-500/20 border border-red-500/50 rounded-lg p-3 text-red-300 text-sm mb-3';
            errorDiv.textContent = error instanceof Error ? error.message : 'Erreur lors de l\'envoi. Veuillez réessayer.';
            
            // Supprimer l'ancienne erreur si présente
            form.querySelector('.bg-red-500\\/20')?.remove();
            form.insertBefore(errorDiv, form.firstChild);
            
            // Réactiver le bouton
            submitBtn.disabled = false;
            submitBtn.textContent = originalText;
        }
    });
</script>
