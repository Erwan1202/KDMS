---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import logoWhite from "../assets/common/logo-white.png";
import bgImage from "../assets/landing-bg.jpg";
---

<Layout
    title="KDMS - Flight Cases Sur Mesure"
    description="KDMS, fabricant français de flight cases 100% sur mesure."
>
    <main class="min-h-screen relative">
        <!-- Background Image -->
        <Image
            src={bgImage}
            alt=""
            class="fixed inset-0 w-full h-full object-cover scale-125 object-[30%_40%]"
            loading="eager"
        />
        <div class="fixed inset-0 bg-black/60" style="z-index: 5;"></div>

        <!-- Content -->
        <div
            class="relative min-h-screen flex flex-col items-center justify-center px-6 py-12 text-center text-white"
            style="z-index: 10;"
        >
            <Image
                src={logoWhite}
                alt="KDMS"
                class="w-28 md:w-36 mb-8"
                loading="eager"
            />

            <h1 class="text-3xl md:text-5xl font-bold mb-3">
                On peaufine les <span class="text-[#4A5D23]"
                    >derniers détails...</span
                >
            </h1>
            <p class="text-white/60 text-lg mb-10 max-w-md">
                Votre expert en flight cases sur mesure arrive bientôt.
            </p>

            <!-- Contact Card -->
            <div
                class="bg-black/50 backdrop-blur-md border border-white/10 rounded-xl p-6 w-full max-w-sm"
            >
                <p class="text-white/40 text-xs uppercase tracking-widest mb-4">
                    Contactez-nous
                </p>

                <a
                    href="tel:+33169127210"
                    class="flex items-center gap-3 mb-4 group"
                >
                    <div
                        class="w-10 h-10 rounded-full bg-[#4A5D23]/30 flex items-center justify-center flex-shrink-0"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            class="text-[#4A5D23]"
                        >
                            <path
                                d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
                            ></path>
                        </svg>
                    </div>
                    <span
                        class="text-white font-semibold group-hover:text-[#4A5D23] transition-colors"
                        >+33 1 69 12 72 10</span
                    >
                </a>

                <a
                    href="mailto:contact@k-dms.co"
                    class="flex items-center gap-3 mb-4 group"
                >
                    <div
                        class="w-10 h-10 rounded-full bg-[#4A5D23]/30 flex items-center justify-center flex-shrink-0"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            class="text-[#4A5D23]"
                        >
                            <path
                                d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                            ></path>
                            <polyline points="22,6 12,13 2,6"></polyline>
                        </svg>
                    </div>
                    <span
                        class="text-white font-semibold group-hover:text-[#4A5D23] transition-colors"
                        >contact@k-dms.co</span
                    >
                </a>

                <div class="flex items-center gap-3">
                    <div
                        class="w-10 h-10 rounded-full bg-[#4A5D23]/30 flex items-center justify-center flex-shrink-0"
                    >
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            width="18"
                            height="18"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="1.5"
                            class="text-[#4A5D23]"
                        >
                            <path
                                d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                            ></path>
                            <circle cx="12" cy="10" r="3"></circle>
                        </svg>
                    </div>
                    <span class="text-white/80 text-sm text-left"
                        >8 Rue Camille Décauville<br />91250 Tigery</span
                    >
                </div>
            </div>

            <!-- Map -->
            <div
                class="w-full max-w-sm mt-6 rounded-xl overflow-hidden border border-white/10 h-40"
            >
                <iframe
                    title="Localisation KDMS"
                    class="w-full h-full"
                    loading="lazy"
                    src="https://maps.google.com/maps?q=8+Rue+Camille+D%C3%A9cauville,+91250+Tigery&t=&z=14&ie=UTF8&iwloc=&output=embed"
                ></iframe>
            </div>
        </div>
    </main>
</Layout>
