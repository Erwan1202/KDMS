---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/common/Navbar.astro";
import Footer from "../components/common/Footer.astro";
import ContactSection from "../components/AccueilSections/ContactSection.astro";
import { Image } from "astro:assets";

import { categories, projects, brandLogos } from "../data/realisations";
import projectImage from "../assets/accueil/hero-flight-case.png";
---

<Layout title="Nos Réalisations - KDMS">
    <Navbar theme="dark" />

    <main class="main-wrapper bg-black min-h-screen text-white pt-20 sm:pt-24 pb-0">
        <header class="px-4 sm:px-6 md:px-12 lg:px-24 mb-8 sm:mb-12 md:mb-16">
            <h1
                class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl font-bold mb-4 sm:mb-6 tracking-tight"
            >
                NOS CRÉATIONS
            </h1>
            <p class="text-white/60 text-base sm:text-lg md:text-xl font-light max-w-2xl leading-relaxed">
                Explorez notre galerie de solutions sur-mesure. Chaque flight
                case est une réponse unique à une contrainte spécifique.
            </p>
        </header>

        <nav
            class="sticky top-14 sm:top-16 md:top-24 z-40 bg-black/80 backdrop-blur-md w-full mb-6 sm:mb-8 py-3 sm:py-4 px-4 sm:px-6 md:px-12 lg:px-24"
            aria-label="Filtres par catégorie"
        >
            <div class="md:hidden relative">
                <button
                    id="filter-dropdown-btn"
                    type="button"
                    class="w-full flex items-center justify-between bg-white/10 text-white border border-white/20 rounded-lg px-4 py-2.5 text-sm font-medium focus:outline-none focus:ring-2 focus:ring-white/30"
                >
                    <span id="selected-filter-label">Tout voir</span>
                    <svg class="w-4 h-4 ml-2 transition-transform duration-300" id="dropdown-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                    </svg>
                </button>
                
                <div
                    id="filter-dropdown-menu"
                    class="absolute top-full left-0 right-0 mt-2 bg-black/95 backdrop-blur-md border border-white/20 rounded-lg overflow-hidden shadow-2xl hidden z-50"
                >
                    {
                        categories.map((cat) => (
                            <button
                                type="button"
                                class={`dropdown-item w-full text-left px-4 py-3 text-sm font-medium transition-colors duration-150 active:bg-[#4A5D23]/50 border-b border-white/5 last:border-0 ${cat.id === "all" ? "bg-[#4A5D23] text-white" : "text-white/70"}`}
                                data-category={cat.id}
                            >
                                {cat.label}
                            </button>
                        ))
                    }
                </div>
            </div>

            <div class="hidden md:flex flex-wrap justify-center gap-2 lg:gap-3" role="group">
                {
                    categories.map((cat) => (
                        <button
                            type="button"
                            class={`filter-btn px-4 lg:px-5 py-1.5 lg:py-2 rounded-full text-xs lg:text-sm font-medium transition-all duration-200 
                                hover:scale-105 whitespace-nowrap will-change-transform ${cat.id === "all" ? "bg-[#4A5D23] text-white" : "bg-transparent text-white/70 hover:bg-white/10 hover:text-white"}`}
                            data-category={cat.id}
                            aria-pressed={cat.id === "all" ? "true" : "false"}
                        >
                            {cat.label}
                        </button>
                    ))
                }
            </div>
        </nav>

        <section
            class="px-3 sm:px-4 md:px-8 lg:px-12 pb-16 sm:pb-24 mx-auto max-w-[1920px]"
            aria-label="Galerie de projets"
        >
            <div
                class="columns-2 lg:columns-3 xl:columns-4 gap-2 sm:gap-4 md:gap-6 lg:gap-8 space-y-2 sm:space-y-4 md:space-y-6 lg:space-y-8"
            >
                {
                    projects.map((project) => (
                        <article
                            class={`project-item break-inside-avoid relative group cursor-pointer overflow-hidden rounded-lg sm:rounded-xl ${project.color} ${project.ratio}`}
                            data-category={project.category}
                        >
                            <div class="absolute inset-0 opacity-40 group-hover:opacity-60 transition-opacity duration-300 will-change-opacity">
                                <Image
                                    src={projectImage}
                                    alt={project.title}
                                    class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-[filter] duration-500"
                                    loading="lazy"
                                />
                            </div>

                            <div class="absolute inset-0 bg-gradient-to-t from-black via-black/20 to-transparent opacity-60 group-hover:opacity-90 transition-opacity duration-200" />

                            <!-- Contenu des cards adapté mobile -->
                            <div class="absolute bottom-0 left-0 w-full p-4 sm:p-5 md:p-6 translate-y-4 group-hover:translate-y-0 transition-transform duration-300 ease-out will-change-transform">
                                <span class="text-[#6b755a] text-[10px] sm:text-xs font-bold uppercase tracking-widest mb-1.5 sm:mb-2 block opacity-0 group-hover:opacity-100 transition-opacity duration-500 delay-100">
                                    {project.category}
                                </span>
                                <h2 class="text-lg sm:text-xl md:text-2xl font-bold text-white mb-1.5 sm:mb-2 leading-tight">
                                    {project.title}
                                </h2>
                                <p class="text-white/60 text-xs sm:text-sm font-light max-h-0 overflow-hidden opacity-0 group-hover:max-h-20 group-hover:opacity-100 transition-all duration-500 ease-in-out line-clamp-3">
                                    {project.description}
                                </p>
                            </div>

                            <div
                                class="absolute top-3 right-3 sm:top-4 sm:right-4 w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-white/10 backdrop-blur-md flex items-center justify-center opacity-0 -translate-y-2 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300"
                                aria-hidden="true"
                            >
                                <svg
                                    width="16"
                                    height="16"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    class="text-white sm:w-5 sm:h-5"
                                >
                                    <path
                                        d="M7 17L17 7"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    />
                                    <path
                                        d="M7 7H17V17"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    />
                                </svg>
                            </div>
                        </article>
                    ))
                }
            </div>
        </section>

        <section
            class="w-full py-12 sm:py-16 md:py-24 bg-black border-t border-white/10 overflow-hidden"
            aria-label="Marques partenaires"
        >
            <div class="px-4 sm:px-6 md:px-12 lg:px-24 mb-8 sm:mb-10 text-center">
                <h2 class="text-xl sm:text-2xl md:text-3xl font-bold text-white">
                    On vient nous voir pour flighter
                </h2>
            </div>

            <div class="marquee-container relative">
                <div class="marquee-track flex items-center gap-12 sm:gap-16 md:gap-20 animate-marquee">
                    {
                        brandLogos.map((logo) => (
                            <div class="flex-shrink-0 w-24 sm:w-32 md:w-40 h-12 sm:h-16 md:h-20 flex items-center justify-center">
                                <Image
                                    src={logo.logo}
                                    alt={logo.name}
                                    class="max-w-full max-h-full object-contain"
                                    style="filter: none !important;"
                                    loading="lazy"
                                />
                            </div>
                        ))
                    }
                    {
                        brandLogos.map((logo) => (
                            <div class="flex-shrink-0 w-24 sm:w-32 md:w-40 h-12 sm:h-16 md:h-20 flex items-center justify-center">
                                <Image
                                    src={logo.logo}
                                    alt={logo.name}
                                    class="max-w-full max-h-full object-contain"
                                    style="filter: none !important;"
                                    loading="lazy"
                                />
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <footer
            id="footer-section"
            class="bg-black relative z-50 border-t border-white/10"
        >
            <ContactSection />
            <Footer />
        </footer>
    </main>
</Layout>

<script>
    const filterBtnsContainer = document.querySelector('[role="group"]');
    const dropdownMenuEl = document.getElementById("filter-dropdown-menu");
    const dropdownBtnEl = document.getElementById("filter-dropdown-btn");
    const dropdownArrowEl = document.getElementById("dropdown-arrow");
    const selectedLabelEl = document.getElementById("selected-filter-label");
    const projectItems = document.querySelectorAll<HTMLElement>(".project-item");
    
    const activeClasses = ["bg-[#4A5D23]", "text-white"];
    const inactiveClasses = ["bg-transparent", "text-white/70"];
    const dropdownActiveClasses = ["bg-[#4A5D23]", "text-white"];
    const dropdownInactiveClasses = ["text-white/70"];

    // Récupérer la catégorie depuis l'URL
    function getCategoryFromURL(): string {
        const urlParams = new URLSearchParams(window.location.search);
        return urlParams.get('category') || 'all';
    }

    // Trouver le label correspondant à une catégorie
    function getLabelForCategory(category: string): string {
        const btn = filterBtnsContainer?.querySelector<HTMLButtonElement>(`[data-category="${category}"]`);
        return btn?.textContent?.trim() || 'Tout voir';
    }

    function filterProjects(category: string): void {
        requestAnimationFrame(() => {
            projectItems.forEach((item) => {
                const show = category === "all" || item.dataset.category === category;
                item.style.display = show ? "block" : "none";
            });
        });
    }
    function updateButtonStates(activeCategory: string): void {
        const btns = filterBtnsContainer?.querySelectorAll<HTMLButtonElement>(".filter-btn");
        btns?.forEach((b) => {
            const isActive = b.dataset.category === activeCategory;
            b.classList.remove(...(isActive ? inactiveClasses : activeClasses));
            b.classList.add(...(isActive ? activeClasses : inactiveClasses));
            b.setAttribute("aria-pressed", String(isActive));
        });
    }

    function updateDropdownStates(activeCategory: string, label: string): void {
        if (selectedLabelEl) selectedLabelEl.textContent = label;
        
        dropdownMenuEl?.querySelectorAll<HTMLButtonElement>(".dropdown-item").forEach((i) => {
            const isActive = i.dataset.category === activeCategory;
            i.classList.remove(...(isActive ? dropdownInactiveClasses : dropdownActiveClasses));
            i.classList.add(...(isActive ? dropdownActiveClasses : dropdownInactiveClasses));
        });
    }

    function toggleDropdown(): void {
        const isHidden = dropdownMenuEl?.classList.toggle("hidden");
        dropdownArrowEl?.classList.toggle("rotate-180", !isHidden);
    }

    function closeDropdown(): void {
        dropdownMenuEl?.classList.add("hidden");
        dropdownArrowEl?.classList.remove("rotate-180");
    }

    function handleFilterSelect(category: string, label: string): void {
        filterProjects(category);
        updateButtonStates(category);
        updateDropdownStates(category, label);
    }
    dropdownBtnEl?.addEventListener("click", (e) => {
        e.stopPropagation();
        toggleDropdown();
    });
    dropdownMenuEl?.addEventListener("click", (e) => {
        const target = (e.target as HTMLElement).closest<HTMLButtonElement>(".dropdown-item");
        if (!target) return;
        
        const category = target.dataset.category || "all";
        const label = target.textContent?.trim() || "Tout voir";
        handleFilterSelect(category, label);
        closeDropdown();
    });

    filterBtnsContainer?.addEventListener("click", (e) => {
        const target = (e.target as HTMLElement).closest<HTMLButtonElement>(".filter-btn");
        if (!target) return;
        
        const category = target.dataset.category || "all";
        const label = target.textContent?.trim() || "Tout voir";
        handleFilterSelect(category, label);
    });

    document.addEventListener("click", (e) => {
        const target = e.target as Node;
        if (!dropdownBtnEl?.contains(target) && !dropdownMenuEl?.contains(target)) {
            closeDropdown();
        }
    }, { passive: true });

    // Appliquer le filtre initial depuis l'URL au chargement de la page
    document.addEventListener('DOMContentLoaded', () => {
        const initialCategory = getCategoryFromURL();
        const initialLabel = getLabelForCategory(initialCategory);
        handleFilterSelect(initialCategory, initialLabel);
    });
</script>

<style>
    @keyframes marquee {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    .animate-marquee {
        animation: marquee 30s linear infinite;
        will-change: transform;
    }

    @media (max-width: 768px) {
        .animate-marquee {
            animation-duration: 20s;
        }
    }

    .marquee-container:hover .animate-marquee {
        animation-play-state: paused;
    }

    @media (prefers-reduced-motion: reduce) {
        .animate-marquee {
            animation: none;
        }
        
        *, *::before, *::after {
            animation-duration: 0.01ms !important;
            animation-iteration-count: 1 !important;
            transition-duration: 0.01ms !important;
        }
    }

    @media (hover: none) and (pointer: coarse) {
        .group:hover .group-hover\:scale-105 {
            transform: none;
        }
    

        
        .filter-btn:hover {
            transform: none !important;
        }
    }
</style>
