---
const expertiseItems = [
    {
        text: "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.",
    },
    {
        text: "Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.",
    },
    {
        text: "Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.",
    },
    {
        text: "Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum.",
    },
];
---

<div
    class="expertise-section w-full min-h-screen flex flex-col justify-center pb-12 px-8 md:px-20 pt-32"
>
    <div class="w-full text-center my-24 -translate-x-4">
        <h2 class="expertise-title text-4xl md:text-6xl font-bold mb-4">
            20 ans d'expertise
        </h2>
    </div>

    <div class="w-full overflow-hidden">
        <div
            class="flex gap-4 overflow-x-auto pb-4 mask-fade-right scrollbar-hide items-center"
        >
            {
                expertiseItems.map((item) => (
                    <div
                        class="expertise-image bg-gray-800 w-[100px] min-w-[100px] h-[50vh] rounded-lg border border-white/20 flex-shrink-0 transition-all duration-500 hover:w-[70vh]"
                        data-text={item.text}
                    />
                ))
            }

            <div
                class="pl-[100px] flex-shrink-0 flex flex-col items-center gap-8 min-w-[400px]"
            >
                <p
                    id="expertise-text"
                    class="text-lg md:text-xl text-white/80 max-w-sm text-center transition-opacity duration-300"
                >
                    Découvrez notre savoir-faire.
                </p>
                <a
                    href="/404"
                    class="group relative inline-flex items-center justify-center px-12 py-6 overflow-hidden rounded-full bg-[#525946] border-2 border-[#6b755a] shadow-[0_6px_20px_rgba(82,89,70,0.5)] transition-all duration-300 hover:scale-105 hover:shadow-[0_8px_30px_rgba(82,89,70,0.7)] whitespace-nowrap no-underline"
                >
                    <span
                        class="absolute inset-0 w-full h-full bg-gradient-to-br from-white/20 to-transparent opacity-50"
                    ></span>
                    <span
                        class="relative text-white font-bold text-2xl tracking-wider"
                        >Découvrir</span
                    >
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    const expertiseImages = document.querySelectorAll(".expertise-image");
    const expertiseText = document.getElementById("expertise-text");

    expertiseImages.forEach((img) => {
        img.addEventListener("mouseenter", () => {
            const text = img.getAttribute("data-text");
            if (expertiseText && text) {
                expertiseText.style.opacity = "0";
                setTimeout(() => {
                    expertiseText.innerText = text;
                    expertiseText.style.opacity = "1";
                }, 150);
            }
        });
    });
</script>
