    class="contact-section w-full min-h-[30vh] sm:min-h-[40vh] md:min-h-[50vh] lg:min-h-[60vh] py-12 sm:py-16 md:py-20 lg:py-24 px-4 sm:px-6 md:px-8 bg-[#141414] flex items-center justify-center"
>
    <div
        class="w-full max-w-4xl flex flex-col items-center text-center md:-translate-x-5"
    >
        <h2
            class="contact-title text-2xl sm:text-3xl md:text-5xl lg:text-6xl xl:text-7xl font-bold mb-3 sm:mb-4 md:mb-6 text-white tracking-tight"
        >
            Un projet ? <span class="text-[#4A5D23]">Parlons-en</span> !
        </h2>

        <p
            class="contact-subtitle text-sm sm:text-base md:text-lg lg:text-xl xl:text-2xl text-[#B8B8B8] mb-6 sm:mb-8 md:mb-10 lg:mb-12 font-medium max-w-xl md:max-w-2xl px-2 sm:px-4 md:px-0"
