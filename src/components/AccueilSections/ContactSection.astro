<section class="contact-section w-full min-h-[60vh] py-24 px-8 bg-black">
    <div class="w-full flex flex-col items-center justify-center text-justify">
        <h2
            class="contact-title text-4xl md:text-6xl font-bold mb-6 text-white tracking-tight opacity-0 translate-y-10"
        >
            Un projet ? Parlons-en !
        </h2>
        <p
            class="contact-subtitle text-lg md:text-xl text-white/70 mb-12 font-light max-w-2xl opacity-0 translate-y-10"
        >
            Nous sommes à votre écoute pour concrétiser vos idées
        </p>
        <a
            href="/404"
            class="contact-cta group relative inline-flex items-center justify-center px-16 py-4 overflow-hidden rounded-full bg-[#525946] border-2 border-[#6b755a] shadow-[0_6px_20px_rgba(82,89,70,0.5)] transition-all duration-300 hover:scale-105 hover:shadow-[0_8px_30px_rgba(82,89,70,0.7)] whitespace-nowrap no-underline opacity-0 translate-y-10"
        >
            <span
                class="absolute inset-0 w-full h-full bg-gradient-to-br from-white/20 to-transparent opacity-50"
            ></span>
            <span class="relative text-white font-bold text-xl tracking-wider">
                Nous contacter
            </span>
        </a>
    </div>
</section>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    const title = document.querySelector(".contact-title");
    const subtitle = document.querySelector(".contact-subtitle");
    const cta = document.querySelector(".contact-cta");

    const elements = [title, subtitle, cta].filter(Boolean);

    elements.forEach((el, index) => {
        gsap.to(el, {
            scrollTrigger: {
                trigger: el,
                start: "top 85%",
                toggleActions: "play none none reverse",
            },
            opacity: 1,
            y: 0,
            duration: 0.8,
            delay: index * 0.15,
            ease: "power3.out",
        });
    });
</script>
