---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{title}</title>
        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }
            html,
            body {
                margin: 0;
                width: 100%;
                height: 100%;
            }
            html {
                scrollbar-width: none;
            }
            html::-webkit-scrollbar {
                display: none;
            }
        </style>
    </head>
    <body class="bg-white scrollbar-hide overflow-x-hidden">
        <!-- Debug: Red center line -->
        <div
            class="fixed top-0 left-1/2 w-[2px] h-full bg-red-500 z-[9999] pointer-events-none"
        >
        </div>
        <slot />
    </body>
</html>
